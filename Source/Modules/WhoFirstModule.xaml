<Page x:Class="BombGameSolver.Source.Modules.WhoFirstModule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d">
    <Grid Background="DarkSlateGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="Background" Value="WhiteSmoke" />
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="Background" Value="WhiteSmoke" />
                    <Setter Property="Padding" Value="0 3 0 3" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <Grid Margin="0 0 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0">
                    <Run Text="NULL" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1">
                    <Run Text="BLANK" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2">
                    <Run Text="C" />
                    <LineBreak />
                    <Run Text="4" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3">
                    <Run Text="CEE" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4">
                    <Run Text="DISPLAY" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5">
                    <Run Text="FIRST" />
                    <LineBreak />
                    <Run Text="4" />
                </TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="6">
                    <Run Text="HOLD ON" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0">
                    <Run Text="LEAD" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1">
                    <Run Text="LED" />
                    <LineBreak />
                    <Run Text="2" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="2">
                    <Run Text="LEED" />
                    <LineBreak />
                    <Run Text="3" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="3">
                    <Run Text="NO" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="4">
                    <Run Text="NOTHING" />
                    <LineBreak />
                    <Run Text="2" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="5">
                    <Run Text="OKAY" />
                    <LineBreak />
                    <Run Text="4" />
                </TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="6">
                    <Run Text="READ" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="0">
                    <Run Text="RED" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="1">
                    <Run Text="REED" />
                    <LineBreak />
                    <Run Text="3" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="2">
                    <Run Text="SAYS" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="3">
                    <Run Text="SEE" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="4">
                    <Run Text="THEIR" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="5">
                    <Run Text="THERE" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="6">
                    <Run Text="THEY'RE" />
                    <LineBreak />
                    <Run Text="?" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="0">
                    <Run Text="THEY ARE" />
                    <LineBreak />
                    <Run Text="3" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="1">
                    <Run Text="UR" />
                    <LineBreak />
                    <Run Text="1" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="2">
                    <Run Text="YES" />
                    <LineBreak />
                    <Run Text="?" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="3">
                    <Run Text="YOU" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="4">
                    <Run Text="YOUR" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="5">
                    <Run Text="YOU'RE" />
                    <LineBreak />
                    <Run Text="6" />
                </TextBlock>
                <TextBlock Grid.Column="3" Grid.Row="6">
                    <Run Text="YOU ARE" />
                    <LineBreak />
                    <Run Text="5" />
                </TextBlock>
            </Grid>

            <Grid Grid.Column="1" Margin="10 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Button Content="BLANK" Command="{Binding ButtonCommand}" CommandParameter="blank" />
                <Button Grid.Column="0" Grid.Row="1" Content="DONE" Command="{Binding ButtonCommand}"
                        CommandParameter="done" />
                <Button Grid.Column="0" Grid.Row="2" Content="FIRST" Command="{Binding ButtonCommand}"
                        CommandParameter="first" />
                <Button Grid.Column="0" Grid.Row="3" Content="HOLD" Command="{Binding ButtonCommand}"
                        CommandParameter="hold" />
                <Button Grid.Column="0" Grid.Row="4" Content="LEFT" Command="{Binding ButtonCommand}"
                        CommandParameter="left" />
                <Button Grid.Column="0" Grid.Row="5" Content="LIKE" Command="{Binding ButtonCommand}"
                        CommandParameter="like" />
                <Button Grid.Column="0" Grid.Row="6" Content="MIDDLE" Command="{Binding ButtonCommand}"
                        CommandParameter="middle" />
                <Button Grid.Column="1" Grid.Row="0" Content="NEXT" Command="{Binding ButtonCommand}"
                        CommandParameter="next" />
                <Button Grid.Column="1" Grid.Row="1" Content="NO" Command="{Binding ButtonCommand}"
                        CommandParameter="no" />
                <Button Grid.Column="1" Grid.Row="2" Content="NOTHING" Command="{Binding ButtonCommand}"
                        CommandParameter="nothing" />
                <Button Grid.Column="1" Grid.Row="3" Content="OKAY" Command="{Binding ButtonCommand}"
                        CommandParameter="okay" />
                <Button Grid.Column="1" Grid.Row="4" Content="PRESS" Command="{Binding ButtonCommand}"
                        CommandParameter="press" />
                <Button Grid.Column="1" Grid.Row="5" Content="READY" Command="{Binding ButtonCommand}"
                        CommandParameter="ready" />
                <Button Grid.Column="1" Grid.Row="6" Content="RIGHT" Command="{Binding ButtonCommand}"
                        CommandParameter="right" />
                <Button Grid.Column="2" Grid.Row="0" Content="SURE" Command="{Binding ButtonCommand}"
                        CommandParameter="sure" />
                <Button Grid.Column="2" Grid.Row="1" Content="U" Command="{Binding ButtonCommand}" CommandParameter="u" />
                <Button Grid.Column="2" Grid.Row="2" Content="UR" Command="{Binding ButtonCommand}"
                        CommandParameter="ur" />
                <Button Grid.Column="2" Grid.Row="3" Content="UHHH" Command="{Binding ButtonCommand}"
                        CommandParameter="uhhh" />
                <Button Grid.Column="2" Grid.Row="4" Content="UH UH" Command="{Binding ButtonCommand}"
                        CommandParameter="uhuh" />
                <Button Grid.Column="2" Grid.Row="5" Content="UH HUH" Command="{Binding ButtonCommand}"
                        CommandParameter="uhhuh" />
                <Button Grid.Column="2" Grid.Row="6" Content="WAIT" Command="{Binding ButtonCommand}"
                        CommandParameter="wait" />
                <Button Grid.Column="3" Grid.Row="0" Content="WHAT" Command="{Binding ButtonCommand}"
                        CommandParameter="what" />
                <Button Grid.Column="3" Grid.Row="1" Content="WHAT?" Command="{Binding ButtonCommand}"
                        CommandParameter="what?" />
                <Button Grid.Column="3" Grid.Row="2" Content="YES" Command="{Binding ButtonCommand}"
                        CommandParameter="yes" />
                <Button Grid.Column="3" Grid.Row="3" Content="YOU" Command="{Binding ButtonCommand}"
                        CommandParameter="you" />
                <Button Grid.Column="3" Grid.Row="4" Content="YOUR" Command="{Binding ButtonCommand}"
                        CommandParameter="your" />
                <Button Grid.Column="3" Grid.Row="5" Content="YOU'RE" Command="{Binding ButtonCommand}"
                        CommandParameter="you're" />
                <Button Grid.Column="3" Grid.Row="6" Content="YOU ARE" Command="{Binding ButtonCommand}"
                        CommandParameter="youare" />
            </Grid>
        </Grid>

        <TextBox Text="{Binding OutputTextBox}" Grid.Row="1" FontSize="36" Padding="5 0 0 0" TextWrapping="Wrap"
                 VerticalAlignment="Stretch" Background="Transparent" Foreground="White" TextAlignment="Left"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="0 20 0 0" />
    </Grid>
</Page>