<Page
    x:Class="BombGameSolver.Source.Modules.MemoryModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Focusable="False"
    FocusManager.FocusedElement="{Binding ElementName=MainFocusItem}">
    <Grid
        Background="DarkSlateGray"
        Focusable="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="3*"/>
            <ColumnDefinition
                Width="2*"/>
        </Grid.ColumnDefinitions>

        <Image
            Source="../../Resources/memory/background.png"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding DisplayMainImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding FirMainImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding SecMainImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding ThiMainImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding FouMainImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding LightImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>
        <Image
            Source="{Binding OutputHighlightImage}"
            Margin="10"
            Grid.Column="0"
            Focusable="False"/>

        <Grid
            Grid.Column="1"
            Focusable="False">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*"/>
                <RowDefinition
                    Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Focusable="False"
                MinWidth="300">
                <TextBlock
                    Text="{Binding RoundText}"
                    FontSize="18"
                    Padding="10 5 10 5"
                    IsEnabled="False"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Foreground="White"
                    VerticalAlignment="Center"
                    Focusable="False"/>
                <TextBox
                    Name="MainFocusItem"
                    FontSize="50"
                    TextAlignment="Center"
                    MaxLength="4"
                    Text="{Binding InputTextBox, UpdateSourceTrigger=PropertyChanged}"
                    CommandManager.PreviewExecuted="DisablePasteCommand"
                    SelectionChanged="MoveCursorToEndChar"/>
                <Button
                    Content="Next Round  (RETURN)"
                    FontSize="20"
                    Padding="0 8"
                    Command="{Binding ButtonCommand}"
                    CommandParameter="submit"
                    Focusable="False"/>
            </StackPanel>
            <TextBox
                Text="{Binding OutputText}"
                Grid.Row="1"
                FontSize="60"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Padding="10"
                VerticalAlignment="Center"
                Focusable="False"
                Foreground="White"
                Background="Transparent"
                Margin="10 0 15 0"
                IsReadOnly="True"/>
        </Grid>
    </Grid>
</Page>